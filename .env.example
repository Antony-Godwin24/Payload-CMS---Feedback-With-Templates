# Example .env for local development
# Copy to .env and fill in secrets when needed

# Required for Payload sessions
PAYLOAD_SECRET=changeme_local_secret

# NEXT_PUBLIC_SERVER_URL used by client to request server-side endpoints
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Port to run the app on
PORT=3000

# For local development use SQLite (no credentials required)
DATABASE_URI=sqlite://payload-backend.db

# For production, set DATABASE_URI to a Mongo connection string
# DATABASE_URI=mongodb+srv://<user>:<password>@cluster0.mongodb.net/payload-db?retryWrites=true&w=majority
